<view class="container">
  <!-- 搜索 -->
  <view class='search'>
    <view class='scan'>
      <image mode='aspectFit' class='widgets-img' src='/image/ai3.png' />
    </view>
    <view class='search-input'>
      <image mode='aspectFit' class='search-icon' src='/image/ath.png' />
      <input class='search-text' placeholder='搜索商品' />
    </view>
    <view class='scan'>
      <image mode='aspectFit' class='widgets-img' src='/image/ahv.png' />
    </view>
  </view>
  <!-- 轮播图 -->
  <swiper indicator-dots="{{ true }}" autoplay="{{ true }}" interval="{{ 3500 }}" indicator-color="rhba(255, 255, 255, 0.3)" indicator-active-color="#fff">
    <block wx:for="{{ swipers }}" wx:key="{{ item.image }}">
      <swiper-item>
        <image src="{{ item.image }}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <!-- 图标分类 -->
  <view class='big-logo'>
    <block wx:for="{{ logos }}" wx:key='{{ item.image }}'>
      <view class='logoinfo'>
        <image style='height: 100rpx;width: 100rpx;' src='{{ item.image }}' mode='aspectFit' />
        <text class='logotext'>{{ item.title }}</text>
      </view>
    </block>
  </view>
  <!-- 掌上秒杀 -->
  <view class='page-margin'>
    <view class="page-row">
      <image class='theme_img' src="/image/bej.png" mode="aspectFill" />
      <view class='theme_more'>
        <text>更多秒杀</text>
        <image src="/image/arrowright.png" mode="aspectFill" />
      </view>
    </view>
    <scroll-view class='theme_scroll' scroll-x="true">
      <block wx:for-items="{{ quicks }}" wx:key="{{ item.image }}">
        <view style="display: inline-block;">
          <view class="page-column">
            <image src="{{ item.image }}" mode="aspectFill" />
            <text>{{ item.price }}</text>
          </view>
        </view>
      </block>
    </scroll-view>
  </view>
  <!-- 会场分类 -->
  <block wx:for='{{ pageRow }}' wx:for-item="page" wx:key="*this">
    <view class='page-row' style="justify-content:center">
      <image class='page_img' wx:for='{{ page }}' wx:key="{{ item }}" src="{{ item }}" mode="aspectFill"></image>
    </view>
  </block>
</view>
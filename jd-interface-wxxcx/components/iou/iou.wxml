<view class='popupDom' wx:if='{{ isShowBaiTiao }}'>
  <view class='pop_main'>


    <!-- 头部 -->
    <view class='pop_header'>
      打白条购买
      <text>×</text>
    </view>



    <!-- 中间 -->
    <view class='pop_body'>
      <block wx:for='{{ baitiao }}' wx:key="*this">
        <view class='section_item'>
          <image wx:if='{{ item.select }}' src='../../image/selected.png'></image>
          <image wx:else src='../../image/unselect.png'></image>
          <view class='detail'>
            <text class='dec'>{{ item.desc }}</text>
            <text class='tip'>{{ item.tip }}</text>
          </view>
        </view>
      </block>
    </view>




    <!-- 尾部 -->
    <view class='pop_btn'>
      <button>立即打白条</button>
    </view>



  </view>
</view>
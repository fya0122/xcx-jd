<view class='popupDom' wx:if='{{ isShowBuy }}'>
  <view class='pop_main'>
    <view class='buy_header'>
      <view class='head_img'>
        <image src='{{ partData.loopImgUrl[0] }}'></image>
      </view>
      <view class='info'>
        <text class='price'>¥{{ partData.price }}</text>
        <text class='selcount'>已选 {{ partData.count }}件</text>
      </view>
      <text>x</text>
    </view>
    <view class='buy_body'>
      <text>数量</text>
      <view class='amount'>
        <amount count='{{ partData.count }}'></amount>
      </view>
    </view>
    <view class='pop_btn'>
      <button>加入购物车</button>
    </view>
  </view>
</view>